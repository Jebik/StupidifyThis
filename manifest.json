{
	"name": "Stupidify This",
	"version": "1.1",
	"description": "A tool to make sarcasm visible easily",
	"permissions": 
	[
		"<all_urls>",
		"tts",
		"tabs",
		"activeTab",
		"clipboardRead",
		"clipboardWrite",
        "storage",
		"contextMenus"
	],

	"background": 
	{
		"scripts": 
		[
			"keycodes.js",
			"background.js"
		]
	},

	"options_page": "options.html",

	"minimum_chrome_version": "14",
	"icons": { "72": "icon72.png" },
	
	"content_scripts": 
	[{
			"matches": ["<all_urls>"],
			"all_frames": true,
			"run_at" : "document_end",
			"js": 
			[
				"keycodes.js",
				"content_script.js"
			]
	}],
	"manifest_version": 2
}
